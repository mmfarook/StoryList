<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/sub_header_image"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"/>
        <TextView
                android:id="@+id/sub_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/sub_header_image"
                android:layout_margin="8dp"
                android:textColor="@color/card_text_color"
                android:textSize="16sp"
                android:textStyle="bold"/>

        <com.example.storylist.ui.view.CustomFontTextView
                android:id="@+id/sub_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/sub_headline"
                android:layout_marginBottom="8dp"
                android:textColor="@color/card_text_color"
                android:textSize="12sp"
                android:textStyle="italic"
                android:layout_below="@id/sub_headline"
                app:customFontTypeFace="dancing_script.ttf"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>